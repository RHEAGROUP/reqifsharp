<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>netstandard2.0</TargetFramework>
	  <Version>1.0.0-RC1</Version>
	  <Description>A .NET library that provides extenions and services to operate on ReqIF documents.</Description>
	  <PackageId>ReqIFSharp.Extensions</PackageId>
	  <Company>RHEA System S.A.</Company>
	  <Copyright>Copyright 2017-2022 RHEA System S.A.</Copyright>
	  <PackageProjectUrl>https://reqifsharp.org</PackageProjectUrl>
	  <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
	  <RepositoryUrl>https://github.com/RHEAGROUP/reqifsharp.git</RepositoryUrl>
	  <RepositoryType>Git</RepositoryType>
	  <PackageIcon>reqifsharp-logo-small.png</PackageIcon>
	  <PackageTags>ReqIF</PackageTags>
	  <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	  <Authors>Sam Gerene</Authors>
	  <RequireLicenseAcceptance>false</RequireLicenseAcceptance>
	  <PackageReleaseNotes>
		  [Initial] release
	  </PackageReleaseNotes>
	  <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="StringExtensions\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ReqIFSharp\ReqIFSharp.csproj" />
  </ItemGroup>

  <ItemGroup>
	<None Include="..\reqifsharp-logo-small.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
