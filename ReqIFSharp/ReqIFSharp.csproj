<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
 
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Version>5.0.0-rc4</Version>
    <Description>ReqIF library that contains ReqIF classes and a specific serializer.</Description>
    <PackageId>ReqIFSharp</PackageId>
    <Company>RHEA System S.A.</Company>
    <Copyright>Copyright 2017-2021 RHEA System S.A.</Copyright>
    <PackageProjectUrl>https://reqifsharp.org</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/RHEAGROUP/reqifsharp.git</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIcon>reqifsharp-logo-small.png</PackageIcon>
    <PackageTags>ReqIF</PackageTags>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Authors>Sam Gerene, Naron Phou</Authors>
    <RequireLicenseAcceptance>false</RequireLicenseAcceptance>
    <PackageReleaseNotes>
      [Add] Serialization to stream; fixes #29
      [Refactor] ReqIFSerializer - remove xmlSerializer and do all work with XmlWriter; fixes #30
      [Add] asynchronous serialization; fixes #31
      [Add] async Deserialization capability; fixes #24
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>TRACE;DEBUG;</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <IncludeSymbols>true</IncludeSymbols>
    <DefineConstants>RELEASE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
